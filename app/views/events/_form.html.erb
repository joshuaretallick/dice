<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br />
    <%= form.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= form.label :price %><br />
    <%= form.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>

  <div class="field">
    <%= form.label :venue %><br />
    <%= form.text_field :venue, autofocus: true, autocomplete: "venue" %>
  </div>

  <div class="field">
    <%= form.label :category %><br />
    <%= form.text_field :category, autofocus: true, autocomplete: "category" %>
  </div>

  <div class="field">
    <%= form.label :stock %><br />
    <%= form.number_field :stock, autofocus: true, autocomplete: "stock" %>
  </div>

  <div class="field">
    <%= form.label :date %><br />
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :time %><br />
    <%= form.time_select :time %>
  </div>

  <div class="field">
    <%= form.label :picture %><br />
    <%= form.file_field :picture %>
  </div>
  <br />
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
